<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Updater"
    android:background="#000C0C1D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/texttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"

                android:text="Today"
                android:layout_gravity="top|center"
                android:background="@drawable/rounded_background"
                android:textColor="#0C0C0C"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textmess1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/blue_chat_bubble_left_cleared1"
                        android:gravity="center"
                        android:text="message 1"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/time_msg_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:30PM"
                        android:layout_marginLeft="20dp"
                        android:textSize="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textmessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/squarechatbubble11_cleared1"
                        android:gravity="center"
                        android:text="message 2"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/time_msg_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:30PM"
                        android:layout_marginRight="20dp"
                        android:textSize="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textmess3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/blue_chat_bubble_left_cleared1"
                        android:gravity="center"
                        android:text="message 3"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/time_msg_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:30PM"
                        android:layout_marginLeft="20dp"
                        android:textSize="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="bottom|end"

                android:layout_marginTop="150dp"

                android:orientation="horizontal">

                <EditText

                    android:id="@+id/editmessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"

                    android:textColor="#000"
                    android:layout_weight="0.8"
                    android:textColorHint="#000"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/fancy_low_11"
                    android:hint="Enter Message to send" />

                <Button
                    android:id="@+id/btn"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"

                    android:layout_marginBottom="0dp"
                    android:background="@drawable/ic_btn_send" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>

